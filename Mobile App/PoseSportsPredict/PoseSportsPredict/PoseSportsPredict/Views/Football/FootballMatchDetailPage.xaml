<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:effects="clr-namespace:Sharpnado.Presentation.Forms.Effects;assembly=Sharpnado.Presentation.Forms"
             xmlns:materialui="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
             xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
             xmlns:customviews="clr-namespace:PoseSportsPredict.Logics.Common.CustomViews"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:tabs="clr-namespace:Sharpnado.Presentation.Forms.CustomViews.Tabs;assembly=Sharpnado.Presentation.Forms"
             xmlns:localize="clr-namespace:PoseSportsPredict.Resources"
             xmlns:footballviews="clr-namespace:PoseSportsPredict.Views.Football"
             xmlns:customs="clr-namespace:Sharpnado.Presentation.Forms.CustomViews;assembly=Sharpnado.Presentation.Forms"
             material:MaterialNavigationPage.StatusBarColor="{StaticResource SecondaryColor_D}"
             x:Class="PoseSportsPredict.Views.Football.FootballMatchDetailPage"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="tabs:UnderlinedTabItem">
                <Setter Property="SelectedTabColor" Value="White" />
                <Setter Property="UnselectedLabelColor" Value="{StaticResource CustomGrey}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
            <Grid BackgroundColor="{StaticResource SecondaryColor}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--Toolbar-->
                <StackLayout
                    Grid.Row="0"
                    Margin="15,0"
                    HeightRequest="35"
                    Orientation="Horizontal"
                    Spacing="15">
                    <ContentView
                        VerticalOptions="End"
                        HeightRequest="25"
                        WidthRequest="25"
                        BackgroundColor="Transparent"
                        effects:TapCommandEffect.Tap="{Binding TouchBackButtonCommand}"
                        effects:ViewEffect.TouchFeedbackColor="{StaticResource SecondaryColor_L}">
                        <Image
                            Source="ic_arrow_back"
                            Aspect="AspectFit"
                            effects:ImageEffect.TintColor="White">
                        </Image>
                    </ContentView>
                    <ContentView
                        VerticalOptions="End"
                        HorizontalOptions="EndAndExpand"
                        HeightRequest="25"
                        WidthRequest="25"
                        BackgroundColor="Transparent"
                        effects:TapCommandEffect.Tap="{Binding TouchAlarmButtonCommand}"
                        effects:ViewEffect.TouchFeedbackColor="{StaticResource SecondaryColor_L}">
                        <Image
                            Source="ic_alarm_add"
                            Aspect="AspectFit"
                            effects:ImageEffect.TintColor="{Binding IsAlarmed}">
                        </Image>
                    </ContentView>
                    <customviews:RatingView
                        VerticalOptions="End"
                        Margin="1"
                        WidthRequest="23"
                        HeightRequest="23"
                        StrokeWidth="1.2"
                        RatingType="Full"
                        ColorOn="White"
                        OutlineOffColor="{StaticResource CustomGrey}"
                        Path="{x:Static customviews:PathConstants.Star}"
                        Count="1"
                        Value="{Binding IsBookmarked, Converter={StaticResource boolToDoubleConverter}, Mode=TwoWay}"
                        effects:TapCommandEffect.Tap="{Binding TouchBookmarkButtonCommand}"
                        effects:ViewEffect.TouchFeedbackColor="{StaticResource SecondaryColor_L}">
                    </customviews:RatingView>
                </StackLayout>

                <!--Header-->
                <Grid Grid.Row="1"
                      Margin="0"
                      Padding="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="67" />
                        <RowDefinition Height="0.1" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!--Home Team-->
                    <StackLayout Grid.Column="0"
                        Spacing="0"
                        HorizontalOptions="End"
                        effects:ViewEffect.TouchFeedbackColor="Accent">
                        <ffimageloading:CachedImage
                            Aspect="AspectFit"
                            HeightRequest="45"
                            LoadingPlaceholder="tab_about.png"
                            ErrorPlaceholder="tab_about.png"
                            Source="{Binding MatchDetail.HomeTeam.Logo}">
                        </ffimageloading:CachedImage>
                        <materialui:MaterialLabel
                            WidthRequest="90"
                            Margin="0,-3"
                            VerticalOptions="CenterAndExpand"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            TypeScale="Caption"
                            LineHeight="0.9"
                            MaxLines="2"
                            LetterSpacing="0.3"
                            TextColor="White"
                            Text="{Binding MatchDetail.HomeTeam.Name}">
                        </materialui:MaterialLabel>
                    </StackLayout>

                    <!--Match Summary-->
                    <!--For NS Match-->
                    <StackLayout Grid.Column="1"
                        Spacing="0"
                        BindingContext="{Binding MatchDetail}">
                        <StackLayout.Triggers>
                            <DataTrigger
                                TargetType="StackLayout"
                                Binding="{Binding MatchStatus, Converter={StaticResource isMatchStartedConverter}}"
                                Value="True">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </StackLayout.Triggers>
                        <materialui:MaterialLabel
                            MaxLines="1"
                            LineBreakMode="TailTruncation"
                            HorizontalTextAlignment="Center"
                            TypeScale="Caption"
                            TextColor="{StaticResource CustomGrey}"
                            Text="{Binding League.Name}">
                        </materialui:MaterialLabel>
                        <materialui:MaterialLabel
                            HorizontalTextAlignment="Center"
                            TypeScale="H5"
                            TextColor="White"
                            Text="{Binding MatchTime, StringFormat='{0:tt hh:mm}'}">
                        </materialui:MaterialLabel>
                        <materialui:MaterialLabel
                            VerticalOptions="EndAndExpand"
                            HorizontalTextAlignment="Center"
                            TypeScale="Caption"
                            TextColor="White"
                            Text="{Binding MatchTime, Converter={StaticResource dateToStringConverter}}">
                        </materialui:MaterialLabel>
                    </StackLayout>
                    <!--For Started Match-->
                    <StackLayout Grid.Column="1"
                        Spacing="0"
                        BindingContext="{Binding MatchDetail}">
                        <StackLayout.Triggers>
                            <DataTrigger
                                TargetType="StackLayout"
                                Binding="{Binding MatchStatus, Converter={StaticResource isMatchStartedConverter}}"
                                Value="False">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </StackLayout.Triggers>
                        <materialui:MaterialLabel
                            MaxLines="1"
                            LineBreakMode="TailTruncation"
                            HorizontalTextAlignment="Center"
                            TypeScale="Caption"
                            TextColor="{StaticResource CustomGrey}"
                            Text="{Binding League.Name}">
                        </materialui:MaterialLabel>
                        <StackLayout
                            Spacing="0"
                            Orientation="Horizontal">
                            <materialui:MaterialLabel
                                HorizontalOptions="EndAndExpand"
                                TypeScale="H5"
                                TextColor="White"
                                Text="{Binding HomeTeam.Score}">
                            </materialui:MaterialLabel>
                            <materialui:MaterialLabel
                                HorizontalOptions="CenterAndExpand"
                                Margin="15,0"
                                TypeScale="H5"
                                TextColor="White"
                                Text=":">
                            </materialui:MaterialLabel>
                            <materialui:MaterialLabel
                                HorizontalOptions="StartAndExpand"
                                TypeScale="H5"
                                TextColor="White"
                                Text="{Binding AwayTeam.Score}">
                            </materialui:MaterialLabel>
                        </StackLayout>
                        <materialui:MaterialLabel
                            VerticalOptions="EndAndExpand"
                            HorizontalTextAlignment="Center"
                            TypeScale="Caption"
                            TextColor="White"
                            Text="{Binding MatchStatus, Converter={StaticResource matchStatusToStringConverter}}">
                        </materialui:MaterialLabel>
                    </StackLayout>

                    <!--Away Team-->
                    <StackLayout Grid.Column="2"
                        Spacing="0"
                        HorizontalOptions="Start"
                        effects:ViewEffect.TouchFeedbackColor="Accent">
                        <ffimageloading:CachedImage
                            Aspect="AspectFit"
                            HeightRequest="45"
                            LoadingPlaceholder="tab_about.png"
                            ErrorPlaceholder="tab_about.png"
                            Source="{Binding MatchDetail.AwayTeam.Logo}">
                        </ffimageloading:CachedImage>
                        <materialui:MaterialLabel
                            Margin="0,-3"
                            WidthRequest="90"
                            HeightRequest="29"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            TypeScale="Caption"
                            LineHeight="0.9"
                            MaxLines="2"
                            LetterSpacing="0.3"
                            TextColor="White"
                            Text="{Binding MatchDetail.AwayTeam.Name}">
                        </materialui:MaterialLabel>
                    </StackLayout>
                    <BoxView
                        Grid.Row="1"
                        Margin="10, 0"
                        Grid.ColumnSpan="3"
                        HeightRequest="0.1"
                        Color="{StaticResource CustomGrey_L}">
                    </BoxView>
                </Grid>

                <!--TabHostView-->
                <tabs:TabHostView
                    Grid.Row="2"
                    x:Name="_tabHost"
                    TabType="Fixed"
                    Margin="0,-7,0,0"
                    HeightRequest="38"
                    ShadowType="Bottom"
                    SelectedIndex="{Binding Source={x:Reference _switcher}, Path=SelectedIndex, Mode=TwoWay}">
                    <tabs:TabHostView.Tabs>
                        <tabs:UnderlinedTabItem Label="{x:Static localize:LocalizeString.Overview}"     LabelSize="12" />
                        <tabs:UnderlinedTabItem Label="{x:Static localize:LocalizeString.H2H}"          LabelSize="12" />
                        <tabs:UnderlinedTabItem Label="{x:Static localize:LocalizeString.Predictions}"  LabelSize="12" />
                        <tabs:UnderlinedTabItem Label="{x:Static localize:LocalizeString.Odds}"         LabelSize="12" />
                    </tabs:TabHostView.Tabs>
                </tabs:TabHostView>
            </Grid>

            <!--ContentView-->
            <tabs:ViewSwitcher
                x:Name="_switcher"
                VerticalOptions="FillAndExpand"
                SelectedIndex="{Binding SelectedViewIndex, Mode=TwoWay}">
                <tabs:ViewSwitcher.GestureRecognizers>
                    <SwipeGestureRecognizer Threshold="80" Direction="Left" Command="{Binding SwipeLeftViewSwitcherCommad}" />
                    <SwipeGestureRecognizer Threshold="80" Direction="Right" Command="{Binding SwipeRightViewSwitcherCommad}" />
                </tabs:ViewSwitcher.GestureRecognizers>

                <customs:LazyView x:TypeArguments="footballviews:FootballMatchDetailOverview" BindingContext="{Binding OverviewModel}" />
                <customs:LazyView x:TypeArguments="footballviews:FootballMatchDetailH2HView" BindingContext="{Binding H2HViewModel}" />
                <customs:LazyView x:TypeArguments="footballviews:FootballMatchDetailPredictionsView" BindingContext="{Binding PredictionsViewModel}" />
                <customs:LazyView x:TypeArguments="footballviews:FootballMatchDetailOddsView" BindingContext="{Binding OddsViewModel}" />
            </tabs:ViewSwitcher>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>