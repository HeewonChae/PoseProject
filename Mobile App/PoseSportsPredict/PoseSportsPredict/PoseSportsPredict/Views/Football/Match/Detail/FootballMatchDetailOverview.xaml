                                        GaugeColor2="{StaticResource CustomGrey_D}"
                                        GaugeBackgroundColor="{StaticResource ChartBackgroundBlack}"
                                        IsAnimation="True"
                                        MaxValue="100"
                                        CurValue="70">
                                    </customviews:SimpleGaugeBar>
                                </Grid>
                                <!--휴식 기간-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <materialui:MaterialLabel
                                    Grid.Column="0"
                                    Margin="10,0"
