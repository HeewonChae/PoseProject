                                    </materialui:MaterialLabel>
                                    <materialui:MaterialLabel
                                    Grid.Column="2"
                                    Margin="10,0"
                                    MaxLines="1"
                                    TypeScale="Caption"
                                    HorizontalTextAlignment="End"
                                    VerticalTextAlignment="Center"
