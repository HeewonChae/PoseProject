                                    Text="70">
                                    </materialui:MaterialLabel>
                                </Grid>
                                <Grid
                                    HeightRequest="12"
                                    Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <customviews:SimpleGaugeBar
                                        Grid.Column="0"
