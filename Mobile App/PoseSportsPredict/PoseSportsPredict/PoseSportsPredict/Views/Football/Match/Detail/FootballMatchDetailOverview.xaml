                                        IsAnimation="True"
                                        MaxValue="100"
                                        CurValue="30">
                                    </customviews:SimpleGaugeBar>
                                    <customviews:SimpleGaugeBar
                                        Grid.Column="1"
                                        IsLeftStart="True"
                                        GaugeColor1="{StaticResource PrimaryColor}"
                                        GaugeColor2="{StaticResource CustomGrey_D}"
                                        GaugeBackgroundColor="{StaticResource ChartBackgroundBlack}"
                                        IsAnimation="True"
                                        MaxValue="100"
                                        CurValue="70">
                                    </customviews:SimpleGaugeBar>
                                </Grid>
                            </StackLayout>
                        </materialui:MaterialCard>
                        <materialui:MaterialCard
                            Padding="10, 5"
                            Margin="7,6"
                            Elevation="3"
                            CornerRadius="5">
                            <StackLayout>
                                <materialui:MaterialLabel
                                MaxLines="1"
                                TypeScale="Subtitle2"
                                TextColor="{StaticResource CustomGrey}"
                                Text="{x:Static localize:LocalizeString.Recent_Form}">
                                </materialui:MaterialLabel>
                            </StackLayout>
                        </materialui:MaterialCard>
                    </StackLayout>
                </ScrollView>
            </loader:TaskLoaderView>
        </StackLayout>
    </ContentView.Content>
</ContentView>